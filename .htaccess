# ==========================================
# SHEAR BUTTER - SECURITY CONFIGURATION
# ==========================================

# Enable HTTPS
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# Prevent directory listing
Options -Indexes

# Disable access to sensitive files
<FilesMatch "^\.">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# Protect specific directories
<DirectoryMatch "^/admin">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
</DirectoryMatch>

# Protect JavaScript files from direct access
<FilesMatch "\.js$">
    <IfModule mod_headers.c>
        Header set Cache-Control "private, no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </IfModule>
</FilesMatch>

# Prevent hotlinking of JavaScript files
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{HTTP_REFERER} !^$
    RewriteCond %{HTTP_REFERER} !^https?://([^/]+\.)?localhost [NC]
    RewriteCond %{HTTP_REFERER} !^https?://([^/]+\.)?127\.0\.0\.1 [NC]
    RewriteCond %{HTTP_REFERER} !^https?://([^/]+\.)?shearbutter\.com [NC]
    RewriteRule \.js$ - [NC,F,L]
</IfModule>

# Protect backend files
<FilesMatch "\.php$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
</FilesMatch>

# Block access to git files
<FilesMatch "\.git">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# Prevent hotlinking
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{HTTP_REFERER} !^$
    RewriteCond %{HTTP_REFERER} !^https?://([^/]+\.)?shearbutter\.com [NC]
    RewriteRule \.(gif|jpg|png|svg|webp)$ - [NC,F,L]
</IfModule>

# Security Headers
<IfModule mod_headers.c>
    # Prevent clickjacking
    Header always append X-Frame-Options "SAMEORIGIN"
    
    # Prevent MIME type sniffing
    Header always append X-Content-Type-Options "nosniff"
    
    # Enable XSS protection
    Header always append X-XSS-Protection "1; mode=block"
    
    # Content Security Policy
    Header always append Content-Security-Policy "default-src 'self' https:; script-src 'self' 'unsafe-inline' https://www.youtube.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data: https:; font-src 'self' https://fonts.gstatic.com; frame-src https://www.youtube.com formspree.io; connect-src 'self' formspree.io;"
    
    # Referrer Policy
    Header always append Referrer-Policy "strict-origin-when-cross-origin"
    
    # Feature Policy
    Header always append Permissions-Policy "camera=(), microphone=(), payment=()"
</IfModule>

# Disable execution of scripts in certain directories
<Directory /assets/images>
    php_flag engine off
</Directory>

<Directory /assets/documents>
    php_flag engine off
</Directory>

# Cache control for static assets
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    
    # CSS
    ExpiresByType text/css "access plus 1 month"
    
    # JavaScript
    ExpiresByType application/javascript "access plus 1 month"
    
    # HTML
    ExpiresByType text/html "access plus 1 day"
</IfModule>

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Disable ETags for better security
<IfModule mod_headers.c>
    Header unset ETag
    FileETag None
</IfModule>

# Block bad bots and scrapers
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{HTTP_USER_AGENT} (bot|spider|crawler|scraper|curl|wget) [NC]
    RewriteRule .* - [F,L]
</IfModule>

# Rate limiting (limit requests per IP)
<IfModule mod_ratelimit.c>
    SetOutputFilter RATE_LIMIT
    RateLimitZone static 10 10
</IfModule>

# Disable trace requests
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteRule ^(.*)$ - [F,L]
    RewriteCond %{REQUEST_METHOD} ^(TRACE|TRACK) [NC]
</IfModule>
